{
  "manifest_version": 3,
  "name": "Lioncrest Agent",
  "version": "1.0.0",

  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "identity",
    "tabs",
    "webNavigation"
  ],

  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.googleapis.com/*",
    "http://localhost:8000/*"
  ],

  "side_panel": {
    "default_path": "index.html"
  },

  "action": {
    "default_title": "Open side panel"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "oauth2": {
    "client_id": "958670873475-laumeefaj0f0mierca1tu0io8b23hov5.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "email",
      "profile"
    ]
  },

  "icons": {
    "128": "icons/lioncrest_ventures_logo.png"
  }
}
